<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="5" random_seed="1"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="fb">
      <actuators>
        <footbot_turret implementation="default"/>
        <differential_steering implementation="default" />
      </actuators>
      <sensors>
        <cameras implementation="default" show_frustum="true">
          <camera id="fixed_camera" anchor="origin" range="0.025:0.25" resolution="640,360"
                  position="-0.05,0,0.125" orientation="90,-90,0"
                  focal_length="884,884" principle_point="319.5,179.5">
            <led_detector medium="leds" show_rays="true"/>
            <tag_detector medium="tags" show_rays="true"/>
          </camera>
          <camera id="turret_camera" anchor="turret" range="0.025:0.225" resolution="640,360"
                  position="0.08,0,0.1" orientation="-90,112.5,0"
                  focal_length="884,884" principle_point="320,180">
            <led_detector medium="leds" show_rays="true"/>
            <tag_detector medium="tags" show_rays="true"/>
          </camera>
        </cameras>
        <differential_steering implementation="default" />
      </sensors>
      <!--params script="../../src/testing/examples/footbot_camera_example.lua"/-->
      <params script="src/testing/examples/footbot_camera_box_example.lua"/>
    </lua_controller>
  </controllers>


  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <!-- Note: rotations are specified and performed in ZYX order (opposite of ARGoS1) -->
  <arena size="1, 1, 0.75" center="0, 0, 0.25">
    <foot-bot id="fb">
      <body position="0,0,0" orientation="0,0,0"/>
      <controller config="fb"/>
    </foot-bot>

    <box id="block" size=".1,.1,.05" mass="0.1" movable="true">
      <body position="0.25,0,0" orientation="0,0,0" />
      <leds medium="leds">
         <led anchor="origin" color="red" offset="0,0,.0525"/>
      </leds>
    </box>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" iterations="25" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" index="grid" grid_size="20,20,20" />
    <tag id="tags" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="true">
      <camera>
        <placement idx="0" position=" 0,  -0.5,0.25" look_at="0,0,0.125"
                   lens_focal_length="15" />
        <placement idx="1" position=" 0.5,-0.5,0.25" look_at="0,0,0.125"
                   lens_focal_length="22.5" />
        <placement idx="2" position=" 0.5, 0,  0.25" look_at="0,0,0.125"
                   lens_focal_length="15" />
        <placement idx="3" position=" 0.5, 0.5,0.25" look_at="0,0,0.125"
                   lens_focal_length="22.5" />
        <placement idx="4" position=" 0,   0.5,0.25" look_at="0,0,0.125"
                   lens_focal_length="15" />
        <placement idx="5" position="-0.5, 0.5,0.25" look_at="0,0,0.125"
                   lens_focal_length="22.5" />
        <placement idx="6" position="-0.5, 0,  0.25" look_at="0,0,0.125"
                   lens_focal_length="15" />
        <placement idx="7" position="-0.5,-0.5,0.25" look_at="0,0,0.125"
                   lens_focal_length="22.5" />
        <placement idx="8" position="0,0,0.5" look_at="0.0,0.0,0.125" up="1,0,0"
                   lens_focal_length="15" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
