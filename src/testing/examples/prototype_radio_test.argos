<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="4" random_seed="1"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="repeater">
      <actuators>
        <radios implementation="default"/>
        <leds implementation="default" medium="leds"/>
      </actuators>
      <sensors>
        <radios implementation="default" show_rays="true"/>
      </sensors>
      <!--params script="../../src/testing/examples/prototype_radio_test.lua"/-->
      <params script="src/testing/examples/prototype_radio_test.lua"/>
    </lua_controller>
  </controllers>


  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="0.25, 0.25, 0.125" center="0, 0, 0.0625">
    <prototype id="repeater0" movable="true">
      <body position="0.03,0.03,0" orientation="-45,0,0" />
      <controller config="repeater"/>
      <links ref="base">
        <link id="base" geometry="box" size=".05,.02,.02" mass="0.1"
              position="0,0,0" orientation="0,0,0" />
      </links>
      <devices>
        <radios medium="radio">
           <radio id="radio_rx" anchor="base" range="0.045" position=".025,0,.01"/>
           <radio id="radio_tx" anchor="base" range="0.045" position="-.025,0,.01"/>
        </radios>
        <leds medium="leds">
           <led id="led" anchor="base" color="0,0,0,0" offset="0,0,.02"/>
        </leds>
      </devices>
    </prototype>
    <prototype id="repeater1" movable="true">
      <body position="-0.03,0.03,0" orientation="45,0,0" />
      <controller config="repeater"/>
      <links ref="base">
        <link id="base" geometry="box" size=".05,.02,.02" mass="0.1"
              position="0,0,0" orientation="0,0,0" />
      </links>
      <devices>
        <radios medium="radio">
           <radio id="radio_rx" anchor="base" range="0.045" position=".025,0,.01"/>
           <radio id="radio_tx" anchor="base" range="0.045" position="-.025,0,.01"/>
        </radios>
        <leds medium="leds">
           <led id="led" anchor="base" color="0,0,0,0" offset="0,0,.02"/>
        </leds>
      </devices>
    </prototype>
    <prototype id="repeater2" movable="true">
      <body position="-0.03,-0.03,0" orientation="135,0,0" />
      <controller config="repeater"/>
      <links ref="base">
        <link id="base" geometry="box" size=".05,.02,.02" mass="0.1"
              position="0,0,0" orientation="0,0,0" />
      </links>
      <devices>
        <radios medium="radio">
           <radio id="radio_rx" anchor="base" range="0.045" position=".025,0,.01"/>
           <radio id="radio_tx" anchor="base" range="0.045" position="-.025,0,.01"/>
        </radios>
        <leds medium="leds">
           <led id="led" anchor="base" color="0,0,0,0" offset="0,0,.02"/>
        </leds>
      </devices>
    </prototype>
    <prototype id="repeater3" movable="true">
      <body position="0.03,-0.03,0" orientation="-135,0,0" />
      <controller config="repeater"/>
      <links ref="base">
        <link id="base" geometry="box" size=".05,.02,.02" mass="0.1"
              position="0,0,0" orientation="0,0,0" />
      </links>
      <devices>
        <radios medium="radio">
           <radio id="radio_rx" anchor="base" range="0.045" position=".025,0,.01"/>
           <radio id="radio_tx" anchor="base" range="0.045" position="-.025,0,.01"/>
        </radios>
        <leds medium="leds">
           <led id="led" anchor="base" color="0,0,0,0" offset="0,0,.02"/>
        </leds>
      </devices>
    </prototype>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="25">
      <gravity g="9.8" />
      <floor height="0.01"/>
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" index="grid" grid_size="20,20,20" />
    <radio id="radio" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="false">
      <camera>
        <placement idx="0" position=" 0,  -0.5,0.2" look_at="0,0,0.05" lens_focal_length="50" />
        <placement idx="1" position=" 0.5,-0.5,0.2" look_at="0,0,0.05" lens_focal_length="65" />
        <placement idx="2" position=" 0.5, 0,  0.2" look_at="0,0,0.05" lens_focal_length="50" />
        <placement idx="3" position=" 0.5, 0.5,0.2" look_at="0,0,0.05" lens_focal_length="65" />
        <placement idx="4" position=" 0,   0.5,0.2" look_at="0,0,0.05" lens_focal_length="50" />
        <placement idx="5" position="-0.5, 0.5,0.2" look_at="0,0,0.05" lens_focal_length="65" />
        <placement idx="6" position="-0.5, 0,  0.2" look_at="0,0,0.05" lens_focal_length="50" />
        <placement idx="7" position="-0.5,-0.5,0.2" look_at="0,0,0.05" lens_focal_length="65" />
        <placement idx="8" position="0,0,0.5" look_at="0.0,0.0,0.125" up="1,0,0" lens_focal_length="40" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
