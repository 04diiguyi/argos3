<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="5" random_seed="0"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="my_controller">
      <actuators>
        <joints implementation="default">
          <joint id="base_wheel_fr" mode="velocity" max_impulse="0.005f"/>
          <joint id="base_wheel_fl" mode="velocity" max_impulse="0.005f"/>
          <joint id="base_wheel_br" mode="velocity" max_impulse="0.005f"/>
          <joint id="base_wheel_bl" mode="velocity" max_impulse="0.005f"/>
          <joint id="base_platform" mode="velocity" max_impulse="0.002f"/>
        </joints>
      </actuators>
      <sensors>
        <joints implementation="default">
          <joint id="base_wheel_fr" mode="velocity"/>
          <joint id="base_wheel_fl" mode="velocity"/>
          <joint id="base_wheel_br" mode="velocity"/>
          <joint id="base_wheel_bl" mode="velocity"/>
          <joint id="base_platform" mode="position"/>
        </joints>
      </sensors>
      <!--params script="../../src/testing/examples/dynamics3d_multi_body_test.lua"/-->
      <params script="src/testing/examples/dynamics3d_multi_body_test.lua"/>
    </lua_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="1, 1, 0.5" center="0, 0, 0.25">
    <box id="bn" size="0.025,0.975,0.05" movable="false" mass="10">
      <body position="0.4875,0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="be" size="0.975,0.025,0.05" movable="false" mass="10">
      <body position="0.0125,-0.4875,0"  orientation="0,0,0" />
    </box>
    <box id="bs" size="0.025,0.975,0.05" movable="false" mass="10">
      <body position="-0.4875,-0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="bw" size="0.975,0.025,0.05" movable="false" mass="10">
      <body position="-0.0125,0.4875,0"  orientation="0,0,0" />
    </box>
    <prototype id="vehicle" movable="true">
      <body position="0,0,0" orientation="0,0,0" />
      <controller config="my_controller"/>
      <links ref="base">
        <link id="base" geometry="box" size="0.1,0.05,0.02" mass="1"
              position="0,0,0.01" orientation="0,0,0" />
        <link id="wheel_fl" geometry="cylinder" radius="0.02" height=".005"
              mass=".05" position=".025,.025,0.02" orientation="0,0,-90" />
        <link id="wheel_fr" geometry="cylinder" radius="0.02" height=".005"
              mass=".05" position=".025,-.025,0.02" orientation="0,0,90" />
        <link id="wheel_br" geometry="cylinder" radius="0.02" height=".005"
              mass=".05" position="-.025,-.025,0.02" orientation="0,0,90" />
        <link id="wheel_bl" geometry="cylinder" radius="0.02" height=".005"
              mass=".05" position="-.025,.025,0.02" orientation="0,0,-90" />
        <link id="platform" geometry="cylinder" radius="0.015" height=".005"
              mass=".05" position="0,0,0.03" orientation="0,0,0" />
      </links>
      <joints>
        <joint id="base_platform" type="prismatic" axis="0,0,1" limit="0:0.02">
          <parent link="base" position="0,0,0.02" orientation="0,0,0"/>
          <child link="platform" position="0,0,0" orientation="0,0,0"/>
        </joint>
        <joint id="base_wheel_fr" type="revolute" axis="0,0,1">
          <parent link="base" position=".025,-.025,.01" orientation="0,0,90"/>
          <child link="wheel_fr" position="0,0,0" orientation="0,0,0"/>
        </joint>
        <joint id="base_wheel_fl" type="revolute" axis="0,0,1">
          <parent link="base" position=".025,.025,.01" orientation="0,0,-90"/>
          <child link="wheel_fl" position="0,0,0" orientation="0,0,0"/>
        </joint>
        <joint id="base_wheel_br" type="revolute" axis="0,0,1">
          <parent link="base" position="-.025,-.025,.01" orientation="0,0,90"/>
          <child link="wheel_br" position="0,0,0" orientation="0,0,0"/>
        </joint>
        <joint id="base_wheel_bl" type="revolute" axis="0,0,1">
          <parent link="base" position="-.025,.025,.01" orientation="0,0,-90"/>
          <child link="wheel_bl" position="0,0,0" orientation="0,0,0"/>
        </joint>
      </joints>
      <devices>
        <leds medium="leds">
          <led anchor="wheel_fl" color="red" offset="0,.01,.005"/>
          <led anchor="wheel_bl" color="red" offset="0,.01,.005"/>
          <led anchor="wheel_fr" color="red" offset="0,.01,.005"/>
          <led anchor="wheel_br" color="red" offset="0,.01,.005"/>
         </leds>
         <tags medium="tags">
            <tag anchor="platform" position="0,0,.0055" orientation="0,0,0" 
                 payload="null" side_length=".01" observable_angle="180" />
         </tags>
      </devices>
    </prototype>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="25">
      <floor height="0.01"/>
      <gravity g="9.8" />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" index="grid" grid_size="20,20,20" />
    <tag id="tags" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="false">
      <camera>
        <placement idx="0" position=" 0,  -0.5,0.2" look_at="0,0,0.05" lens_focal_length="80" />
        <placement idx="1" position=" 0.5,-0.5,0.2" look_at="0,0,0.05" lens_focal_length="90" />
        <placement idx="2" position=" 0.5, 0,  0.2" look_at="0,0,0.05" lens_focal_length="80" />
        <placement idx="3" position=" 0.5, 0.5,0.2" look_at="0,0,0.05" lens_focal_length="90" />
        <placement idx="4" position=" 0,   0.5,0.2" look_at="0,0,0.05" lens_focal_length="80" />
        <placement idx="5" position="-0.5, 0.5,0.2" look_at="0,0,0.05" lens_focal_length="90" />
        <placement idx="6" position="-0.5, 0,  0.2" look_at="0,0,0.05" lens_focal_length="80" />
        <placement idx="7" position="-0.5,-0.5,0.2" look_at="0,0,0.05" lens_focal_length="90" />
        <placement idx="8" position="0,0,0.5" look_at="0.0,0.0,0.125" up="1,0,0" lens_focal_length="40" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
