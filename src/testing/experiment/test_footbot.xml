<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="10" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <test_footbot_controller id="x">
      <actuators>
        <differential_steering implementation="default" />
        <leds                  implementation="default" />
      </actuators>
      <sensors>
        <proximity implementation="default" show_rays="true">
          <sensor position="0.1,0.0,0.1" direction="1,0,0" range="0.5" />
          <sensor position="0.0,0.08,0.1" direction="0,1,0" range="0.5" />
          <sensor position="-0.08,0.0,0.1" direction="-1,1,0" range="0.5" />
        </proximity>
      </sensors>
      <params />
    </test_footbot_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 1">
    <box id="b0" position="1,0,0.1" orientation="0,0,0" size="0.2, 0.5, 0.2" movable="false" />
    <foot-bot id="fb0" position="0,0,0" orientation="0,0,0" controller="x" />
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ************************************ -->
  <!-- * Arena -> Physics Engines mapping * -->
  <!-- ************************************ -->
  <arena_physics>
    <engine id="dyn2d">
      <entity id="fb[[:digit:]]*" />
      <entity id="b[[:digit:]]*" />
    </engine>
  </arena_physics>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl />
  </visualization>

</argos-configuration>
