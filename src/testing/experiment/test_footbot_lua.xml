<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="10" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="lua">
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" />
      </actuators>
      <sensors>
        <ring_proximity implementation="default"
                        show_rays="true"
                        radius="0.08"
                        range="0.2"
                        num_sensors="24"
                        center="0,0,0.1"
                        start_angle="7.5" />
      </sensors>
      <!-- params script="../../src/testing/experiment/test_script.lua" / -->
      <params />
    </lua_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 1">
    <box id="bn" position="1,0,0.1"  orientation="0,0,0" size="0.1, 2, 0.2" movable="false" />
    <box id="bs" position="-1,0,0.1" orientation="0,0,0" size="0.1, 2, 0.2" movable="false" />
    <box id="be" position="0,-1,0.1" orientation="0,0,0" size="2, 0.1, 0.2" movable="false" />
    <box id="bw" position="0,1,0.1"  orientation="0,0,0" size="2, 0.1, 0.2" movable="false" />

    <distribute>
      <position method="uniform" min="-1,-1,0" max="1,1,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="10" max_trials="100">
        <foot-bot id="fb"
                  controller="lua" />
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ************************************ -->
  <!-- * Arena -> Physics Engines mapping * -->
  <!-- ************************************ -->
  <arena_physics>
    <engine id="dyn2d">
      <entity id="fb[[:digit:]]*" />
      <entity id="b[[:alpha:]]" />
    </engine>
  </arena_physics>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="true" />
  </visualization>

</argos-configuration>
